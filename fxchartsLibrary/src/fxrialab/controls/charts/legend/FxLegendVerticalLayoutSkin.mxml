<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" xmlns:layouts="fxrialab.utils.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("fxrialab.controls.charts.legend.FxLegendVerticalLayout")]
	</fx:Metadata>
	
	<s:DataGroup width="100%" dataProvider="{hostComponent.dataProvider}">
		<s:itemRenderer>
			<fx:Component>
				<s:ItemRenderer>
					<s:layout>
						<s:HorizontalLayout verticalAlign="middle" />
					</s:layout>
					<s:Rect width="20" height="20">
						<s:fill>
							<s:SolidColor color="{data.fill}" />
						</s:fill>
					</s:Rect>
					<s:Label text="{data.label}" />
				</s:ItemRenderer>
			</fx:Component>
		</s:itemRenderer>
		<s:layout>
			<s:VerticalLayout />
		</s:layout>
	</s:DataGroup>
</s:Skin>
