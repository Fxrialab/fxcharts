<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:myComp="fxrialab.controls.charts.*"
			   xmlns:charts="fxrialab.controls.charts.legend.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			import mx.collections.IList;
			[Bindable]
			public var chartsData:IList = new ArrayList([
				{type:'horizontalBar', data:[
					{label:'Networking', value: 50, fill: '#DDCAWA'},
					{label:'Programing', value: 46, fill: '#DDAACC'},
					{label:'Marketing', value: 64, fill: '#EE22DD'} 
				]} ,
				{type:'line', stroke:'#00FF00', data:[
					{label:'Google', value: 30},
					{label:'Facebook', value: 100},
					{label:'Apple', value: 40}
				]}  
			]);
		]]>
	</fx:Script>
	
	<myComp:FxChart x="50" y="20" width="200" height="300" dataProvider="{chartsData}"
					title="Example charts demo"/> 
	
</s:Application>
